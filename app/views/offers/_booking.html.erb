<div class="d-flex justify-content-center mt-5 mb-4">

  <div class="card" style="width: 30rem;">
    <div class="card-body">
      <div class="container text-center">
      <h1>Book a place!</h1>
      </div>
      <%= simple_form_for(offer, html: { class: 'form-horizontal' }) do |f| %>
        <%= f.input :start_date, label: 'Start Date', placeholder: 'Enter Date', input_html: { class: 'form-control' } %>
        <%= f.input :end_date, label: 'End Date', placeholder: 'Enter Date', input_html: { class: 'form-control' } %>
        <%= f.submit 'Submit', class: 'btn btn-primary' %>
        <%= link_to 'Go Back', dashboard_path(@offers), class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
