<div class="container mx-3">
<h1>Dashboard</h1>
<p><%= current_user.email %></p>
<div class="offer-container d-flex">
<% @offers.each do |offer| %>
<div class="card p-2 m-3 d-flex" style="width: 14rem;">
<%= image_tag(offer.images, :alt => "haunted house") %>
<h3><%= offer.title %></h3>
<h4><%= offer.city %></h4>
<p><%= offer.address %></p>
<p><%= offer.price %></p>
</div>
<% end %>
</div>

<%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }%>
</div>
