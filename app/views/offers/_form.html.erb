<div class="text-center">
  <h1>Create a new offer!</h1>
</div>

<div class="d-flex justify-content-center">
  <div class="card" style="width: 30rem;">
    <div class="card-body">
      <%= simple_form_for(offer, html: { class: 'form-horizontal' }) do |f| %>
        <%= f.input :title, label: 'Title', placeholder: 'Enter title', input_html: { class: 'form-control' } %>
        <%= f.input :city, label: 'City', placeholder: 'Enter city', input_html: { class: 'form-control' } %>
        <%= f.input :address, label: 'Address', placeholder: 'Enter address', input_html: { class: 'form-control' } %>
        <%= f.input :description, label: 'Description', placeholder: 'Enter description', input_html: { class: 'form-control' } %>
        <%= f.input :price, label: 'Price', placeholder: 'Enter price', input_html: { class: 'form-control' } %>
        <%= f.input :images, label: 'Images', placeholder: 'Upload images', input_html: { class: 'form-control' } %>
        <%= f.submit 'Submit', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
