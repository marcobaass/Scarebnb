<main>
  <div id="banner" class="d-flex justify-content-center align-items-center mb-4">
    <h1 class="">Search for a scary place !</h1>
  </div>

  <div class="grid-container">
  <div class="">
    <h2>Where to go in {user_location}</h2>
  </div>

  <div class="grid-body">
    <% @offers_all.each do |offer| %>
      <div class="">
        <div class="card rounded shadow-sm" style="width: 18rem;">
          <%= image_tag(offer.images, :alt => offer.title) %>
          <% offer.photos.each do |photo| %>
            <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
          <% end %>
          <div class="card-body">
          <h4 class="card-title"><%= offer.title %></h4>
          <p><%= offer.price %>â‚¬</p>
          <%= link_to "", offer_path(offer), class: "stretched-link" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  </div>


  <div>
    <h2>Last minute booking</h2>
  </div>
</main>
