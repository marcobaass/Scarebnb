<div class="mt-5 mb-4"></div>
  <h1>This is Your Personal Dashboard, <%= current_user.email %> </h1>
</div>
<div class="offer-container d-flex">
<% @offers.each do |offer| %>
<div class="card p-2 m-3 d-flex" style="width: 14rem;">
  <% offer.photos.each do |photo| %>
    <%= cl_image_tag photo.key, crop: :fill %>
  <% end %>
<h3><%= offer.title %></h3>
<h4><%= offer.city %></h4>
<p><%= offer.address %></p>
<p><%= offer.price %></p>
<%= link_to "", offer_path(offer), class: "stretched-link" %>
<div class="delete" style="position: relative>
<%= link_to "Delete", offer_path(offer), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
</div>
</div>
<% end %>
</div>


<%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }%>
<%= link_to 'Add a new offer', new_offer_path(@offer) %>

<h1>This are Your Personal Bookings, <%= current_user.email %> </h1>
